---
import Layout from "~/layouts/main.astro";

import {
  languages,
  getLanguage,
  skills,
  type Language,
  type SkillMeta,
} from "~/i18n";

export function getStaticPaths() {
  return [...languages].map((lang) => {
    return { params: { lang } };
  });
}

const lang = Astro.params.lang as Language;
const t = getLanguage(lang);
---

{["en"].includes(lang) && <style set:html="@page { size: Letter; }" />}
{["de"].includes(lang) && <style set:html="@page { size: A4; }" />}

<Layout
  title={t["meta.resume.title"]}
  description={t["meta.resume.description"]}
  image="https://mbund.dev/images/headshot.jpg"
>
  <div class="m-12">
    <div class="flex flex-col items-center">
      <h1 class="text-3xl font-medium">{t["name"]}</h1>

      <span class="text-base font-medium">
        <a href="https://openstreetmap.org/search?query=Columbus, Ohio">
          Columbus, OH
        </a>
        ·
        <a href="mailto:mark@mbund.dev">mark@mbund.dev</a>
        ·
        <a href="https://github.com/mbund">https://github.com/mbund</a>
      </span>
    </div>

    <div>
      <h1 class="text-lg uppercase text-blue-500 font-mono">
        {t["objective.title"]}
      </h1>
      <p class="text-sm">
        {t["objective.text"]}
      </p>
    </div>

    <div>
      <h1 class="text-lg uppercase text-blue-500 font-mono">
        {t["interests.title"]}
      </h1>
      <p class="text-sm">
        {t["interests.description"]}
      </p>
    </div>

    <div>
      <h1 class="text-lg uppercase text-blue-500 font-mono">
        {t["projects.title"]}
      </h1>

      <div class="mb-2">
        <h2 class="flex justify-between">
          <div>
            <span class="font-bold mr-4">
              <a href="https://github.com/rhombusgg/rhombus"
                >rhombusgg/rhombus</a
              >
            </span>
            <span
              >{
                [skills.typescript, skills.astro].map((skill, i) => (
                  <>
                    {i > 0 && " · "}
                    <a href={skill.url}>{skill.name}</a>
                  </>
                ))
              }</span
            >
          </div>
          <a href="https://rhombus.gg">https://rhombus.gg</a>
        </h2>
        <p class="text-sm">
          {t["personal-project.rhombus.description"]}
        </p>
      </div>

      <div class="mb-2">
        <h2>
          <span class="font-bold mr-4">
            <a href="https://github.com/mbund/canvas-cli">mbund/canvas-cli</a>
          </span>
          <span
            >{
              [skills.rust].map((skill, i) => (
                <>
                  {i > 0 && " · "}
                  <a href={skill.url}>{skill.name}</a>
                </>
              ))
            }</span
          >
        </h2>
        <p class="text-sm">
          {t["personal-project.canvas-cli.description"]}
        </p>
      </div>

      <div class="mb-2">
        <h2 class="flex justify-between">
          <div>
            <span class="font-bold mr-4">
              <a href="https://github.com/mbund/homelab">mbund/homelab</a>
            </span>
            <span
              >{
                [skills.kubernetes].map((skill, i) => (
                  <>
                    {i > 0 && " · "}
                    <a href={skill.url}>{skill.name}</a>
                  </>
                ))
              }</span
            >
          </div>
          <a href="https://docs.mbund.org">https://docs.mbund.org</a>
        </h2>
        <p class="text-sm">
          {t["personal-project.homelab.description"]}
        </p>
      </div>
    </div>

    <div>
      <h1 class="text-lg uppercase text-blue-500 font-mono">
        {t["experience.title"]}
      </h1>

      <div class="mb-2">
        <h2 class="flex justify-between">
          <span class="font-bold">
            <a href="https://kududyn.com">
              {t["experience.intern-kudu.header"]}
            </a>
          </span>
          <span>{t["experience.intern-kudu.subheader"]}</span>
        </h2>
        <p class="text-sm">
          {t["experience.intern-kudu.description"]}
        </p>
      </div>

      <div class="mb-2">
        <h2 class="flex justify-between">
          <span class="font-bold">
            <a href="https://osucyber.club">
              {t["experience.cyber-club.header"]}
            </a>
          </span>
          <span>{t["experience.cyber-club.subheader"]}</span>
        </h2>
        <p class="text-sm">
          {t["experience.cyber-club.description"]}
        </p>
      </div>

      <div class="mb-2">
        <h2 class="flex justify-between">
          <span class="font-bold">
            <a href="https://insigma.de">
              {t["experience.internship-insigma.header"]}
            </a>
          </span>
          <span>{t["experience.internship-insigma.subheader"]}</span>
        </h2>
        <p class="text-sm">
          {t["experience.internship-insigma.description"]}
        </p>
      </div>
    </div>

    <div>
      <h1 class="text-lg uppercase text-blue-500 font-mono">
        {t["skills.familiar-tech.title"]}
      </h1>
      {
        [
          skills.typescript,
          skills.react,
          skills.nextjs,
          skills.astro,
          skills.tailwind,
          skills.css,
          skills.zig,
          skills.rust,
          skills.c,
          skills.cpp,
          skills.python,
          skills.csharp,
          skills.bash,
          skills.kotlin,
          skills.debian,
          skills.ubuntu,
          skills.fedora,
          skills.nixos,
          skills.aws,
          skills.kubernetes,
          skills.vscode,
          skills.vim,
          skills.docker,
          skills.git,
        ].map((skill: SkillMeta, i) => (
          <>
            <>{i > 0 && " · "}</>
            <a href={skill.url}>{skill.name}</a>
          </>
        ))
      }
    </div>

    <div>
      <h1 class="text-lg uppercase text-blue-500 font-mono">
        Miscellaneous
      </h1>
      <p class="text-sm">
        {t["education.description"]}. {t["languages.description"]}. {t["hobbies.description"]}.
      </p>
    </div>
  </div>
</Layout>

<style>
  @page {
    orientation: portait;
    margin: 0;
  }

  @media print {
    * {
      print-color-adjust: exact;
    }
  }
</style>
