---
import Layout from "../../../layouts/main.astro";

import { languages, getLanguage, type Language } from "../../../i18n";

export function getStaticPaths() {
  return languages.map((lang) => {
    return { params: { lang } };
  });
}

const lang = Astro.params.lang as Language;
const t = getLanguage(lang);
---

{["en"].includes(lang) && <style>@import "/src/styles/card_us.css";</style>}
{["de"].includes(lang) && <style>@import "/src/styles/card_eu.css";</style>}

<Layout
  title={t["meta.card.back.title"]}
  description={t["meta.card.description"]}
  image="https://mbund.dev/images/headshot.jpg"
>
  <div class="slice"></div>
</Layout>

<style>
  @page {
    orientation: landscape;
    margin: 0;
  }

  @media print {
    * {
      print-color-adjust: exact;
    }
  }

  .slice {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: -1;
    @apply bg-gradient-to-l from-orange-600 to-rose-600;
    clip-path: polygon(0 0, 100% 0, 100% 100%, 50% 100%);
  }
</style>
