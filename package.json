{
  "name": "mbund-resume",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm run web\" \"pnpm run watch-print\" \"pnpm run watch-truncate\"",
    "web": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "print": "chromium --headless --disable-gpu --print-to-pdf=resume-full.pdf --no-margins http://localhost:4321",
    "watch-print": "onchange 'src/**/*.astro' 'resume.json' -- pnpm run print 2> /dev/null",
    "truncate": "pdftk resume-full.pdf cat 1 output resume.pdf",
    "watch-truncate": "onchange 'resume-full.pdf' -- pnpm run truncate 2> /dev/null"
  },
  "dependencies": {
    "@astrojs/tailwind": "^5.1.0",
    "astro": "^4.1.2",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "onchange": "^7.1.0",
    "prettier": "^3.2.1",
    "prettier-plugin-astro": "^0.12.3",
    "prettier-plugin-tailwindcss": "^0.5.11"
  }
}
